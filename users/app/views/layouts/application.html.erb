<!DOCTYPE html>
<html>
<head>
  <title>Users</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
	<style type="text/css">
		#error { color: red; }
		#notice { color: green; }
	</style>
</head>
<body>

<% for name in [:notice, :error] %>
  <% if flash[name] %>
    <div id="<%= name %>"><%= flash[name] %></div>
  <% end %>
<% end %>

<%= yield %>

</body>
</html>
